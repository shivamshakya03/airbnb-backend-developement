<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login | Airbnb</title>
    <link rel="stylesheet" href="/styles.css">
    <style>
        
    </style>
</head>
<body class="body-login">
    <div class="login-container">
        <div class="login-title">Sign in to Airbnb</div>

         <% if (typeof errors !== 'undefined' && errors && errors.length > 0) { %>
            <ul class="server-error-list">
               <% errors.forEach (err => { %>
                    <li class="server-error-item"><%= err %></li>
                <% }); %>
            </ul>
        <% } %>





        <form class="login-form" action="/loginform" method="POST" autocomplete="on">
            <input class="login-email-input" name="email" type="email" placeholder="Email" required autofocus value="<%= typeof oldInput !== 'undefined' ? oldInput.email : '' %>">
            <div class="input-group">
                <input class="login-password-input" name="password" type="password" placeholder="Password" required id="password-field">
                <span class="toggle-password" onclick="togglePassword()">üëÅÔ∏è</span>
            </div>
            <input class="login-submit-btn" type="submit" value="Login">
        </form>
        <div class="login-link">Don't have an account? <a href="/sign-up">Register</a></div>
    </div>
    <script>
        function togglePassword() {
            const pwd = document.getElementById('password-field');
            const icon = document.querySelector('.toggle-password');
            if (pwd.type === 'password') {
                pwd.type = 'text';
                icon.textContent = 'üôà';
            } else {
                pwd.type = 'password';
                icon.textContent = 'üëÅÔ∏è';
            }
        }
    </script>
</body>
</html>